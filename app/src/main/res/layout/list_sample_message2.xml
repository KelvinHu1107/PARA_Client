<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView_chat_time2"
            android:layout_marginTop="25dp"
            android:gravity="right"
            android:textColor="#333333" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#666666"
            android:id="@+id/linearLayout_message2"
            android:layout_margin="12.5dp"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat text"
                android:id="@+id/textView_chatMessage2"
                android:textColor="#333333"
                android:textSize="15sp"
                android:maxLines="20"
                android:layout_margin="5dp"
                android:singleLine="false" />
        </LinearLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView_chat_profile_pic2"
            android:src="@drawable/client_portrait_xh_720x1280"
            android:layout_marginTop="12.5dp"
            android:layout_marginBottom="12.5dp"
            android:layout_marginRight="12.5dp" />

    </LinearLayout>

</LinearLayout>