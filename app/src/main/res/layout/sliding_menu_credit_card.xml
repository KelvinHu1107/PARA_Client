<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <include
        android:id="@+id/toolbar_creditCard"
        layout="@layout/toolbar_credit_card">
    </include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_radius"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="12.5dp"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/linearLayout_cardNum" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Number"
                android:id="@+id/textView6"
                android:textSize="15sp"
                android:textColor="#000000"
                android:paddingLeft="12.5dp"
                android:paddingTop="12.5dp"
                android:paddingBottom="12.5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234-1234-1234-1234"
                android:id="@+id/textView11"
                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:paddingRight="12.5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_xh_720x1280"
                android:background="#ffffff"
                android:layout_marginRight="12.5dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:background="@drawable/divide_line_profile_xh_720x1280" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/linearLayout_cardHolder" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Holder"
                android:id="@+id/textView16"
                android:textSize="15sp"
                android:textColor="#000000"
                android:paddingLeft="12.5dp"
                android:paddingTop="12.5dp"
                android:paddingBottom="12.5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Key"
                android:id="@+id/textView18"
                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:paddingRight="12.5dp"
                android:singleLine="true"
                android:lines="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_xh_720x1280"
                android:background="#ffffff"
                android:layout_marginRight="12.5dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11"
            android:background="@drawable/divide_line_profile_xh_720x1280" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/linearLayout_expire" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expire Date"
                android:id="@+id/textView20"
                android:textColor="#000000"
                android:textSize="15sp"
                android:padding="12.5dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2020"
                android:id="@+id/textView22"
                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:paddingRight="12.5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton6"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_xh_720x1280"
                android:background="#ffffff"
                android:layout_marginRight="12.5dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView15"
            android:background="@drawable/divide_line_profile_xh_720x1280" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/linearLayout_security" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security Code"
                android:id="@+id/textView23"
                android:textSize="15sp"
                android:textColor="#000000"
                android:paddingLeft="12.5dp"
                android:paddingTop="12.5dp"
                android:paddingBottom="12.5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:id="@+id/textView27"
                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:paddingRight="12.5dp"
                android:lines="1"
                android:singleLine="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton10"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_xh_720x1280"
                android:background="#ffffff"
                android:layout_marginRight="12.5dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_radius"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="12.5dp"
        android:layout_marginTop="25dp" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/linearLayout_card_address" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address "
                android:id="@+id/textView28"
                android:textSize="15sp"
                android:textColor="#000000"
                android:paddingLeft="12.5dp"
                android:paddingTop="12.5dp"
                android:paddingBottom="12.5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123 St"
                android:id="@+id/textView29"
                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:paddingRight="12.5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton13"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_xh_720x1280"
                android:background="#ffffff"
                android:layout_marginRight="12.5dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView22"
            android:background="@drawable/divide_line_profile_xh_720x1280" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/linearLayout_postCode" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post Code"
                android:id="@+id/textView35"
                android:textSize="15sp"
                android:textColor="#000000"
                android:paddingLeft="12.5dp"
                android:paddingTop="12.5dp"
                android:paddingBottom="12.5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:id="@+id/textView36"
                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="15sp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:paddingRight="12.5dp"
                android:lines="1"
                android:singleLine="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton20"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_xh_720x1280"
                android:background="#ffffff"
                android:layout_marginRight="12.5dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>