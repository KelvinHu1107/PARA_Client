<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar__header_high"
    android:id="@+id/toolbar_login_template"
    android:background="@color/HeaderColor"
    android:titleTextColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="@dimen/toolbar_right_marge">

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="                "
            android:layout_gravity="center_vertical"
            android:textColor="@color/toolbar_font_color"
            android:textSize="@dimen/toolbar_font_size" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login"
            android:layout_weight="4"
            android:text="Login"
            android:layout_gravity="center_vertical"
            android:textColor="@color/toolbar_font_color"
            android:textSize="@dimen/title_font_size"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/toolbar_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Done"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:textColor="@color/toolbar_font_color"
            android:textSize="@dimen/toolbar_font_size"
            android:layout_margin="12.5dp"
            android:padding="5dp" />
    </LinearLayout>
</android.support.v7.widget.Toolbar>
