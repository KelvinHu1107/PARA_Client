<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <include
        android:id="@+id/toolbar_register_template"
        layout="@layout/toolbar_register">
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4" >



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:id="@+id/linearLayout_mainmain">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/imageView_progressBar"
                android:layout_gravity="center"
                android:src="@drawable/client_select_01"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_radius_grey_stroke"
                android:layout_marginLeft="12.5dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="12.5dp"
                android:layout_marginBottom="12.5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_small_radius_blue4a72b3">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/border_small_radius_blue8fb7e1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView_comfirm_jobTitle"
                            android:layout_weight="1"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:gravity="center_vertical|center_horizontal"
                            android:singleLine="true"
                            android:lines="1"
                            android:layout_marginRight="12.5dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_small_radius_blue4a72b3"
                        android:id="@+id/linearLayout_topSideContainer">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="12.5dp"
                            android:layout_marginBottom="12.5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Budget"
                                android:id="@+id/textView7"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:gravity="right" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="$"
                                android:id="@+id/textView11"
                                android:textSize="18sp"
                                android:textColor="#ffffff"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textView_comfirm_budget"
                                android:textColor="#ffffff"
                                android:textSize="30sp"
                                android:textStyle="bold"
                                android:layout_marginRight="60dp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Post date"
                        android:id="@+id/textView49"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_gravity="center"
                        android:gravity="left|center_vertical|center_horizontal"
                        android:layout_marginLeft="12.5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_comfirm_postDate"
                        android:layout_weight="1"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal|right"
                        android:singleLine="true"
                        android:lines="1"
                        android:layout_marginRight="12.5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task due date"
                        android:id="@+id/textView78"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_gravity="center"
                        android:gravity="left|center_vertical|center_horizontal"
                        android:layout_marginLeft="12.5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_taskDue"
                        android:layout_weight="1"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal|right"
                        android:singleLine="true"
                        android:lines="1"
                        android:layout_marginRight="12.5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:id="@+id/textView41"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_gravity="center"
                        android:gravity="left|center_vertical|center_horizontal"
                        android:layout_marginLeft="12.5dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_comfirm_address"
                        android:layout_weight="1"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|right"
                        android:singleLine="true"
                        android:lines="1"
                        android:layout_marginRight="12.5dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_city"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:gravity="right"
                    android:layout_marginRight="12.5dp"
                    android:layout_marginBottom="12.5dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView19"
                    android:src="@drawable/divide_line_furtherinfo_xh_720x1280" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Discription"
                        android:id="@+id/textView72"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:gravity="center_vertical"
                        android:paddingLeft="12.5dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_comfirm_description"
                        android:padding="12.5dp"
                        android:textSize="13sp"
                        android:textColor="#666666" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/border_radius_blue_button"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="12.5dp"
                    android:layout_marginLeft="12.5dp"
                    android:layout_marginRight="12.5dp"
                    android:id="@+id/linearLayout_bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task Offering"
                        android:id="@+id/textView_bottom"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout_main">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12.5dp"
                        android:id="@+id/linearLayout_container">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView49"
                            android:src="@drawable/notification_icon"
                            android:layout_gravity="center"
                            android:layout_margin="5dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical|center_horizontal"
                            android:background="@drawable/border_radius" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Your payment option has been rejected"
                                android:id="@+id/textView83"
                                android:textSize="15sp"
                                android:textColor="#000000"
                                android:layout_marginTop="12.5dp"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Please select another payment option"
                                android:id="@+id/textView113"
                                android:textSize="15sp"
                                android:textColor="#000000"
                                android:layout_marginBottom="12.5dp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_radius"
                    android:layout_margin="12.5dp"
                    android:id="@+id/linearLayout_providerContainer">

                    <com.newnergy.para_client.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView_confirm_pic"
                        android:src="@drawable/client_photo_round"
                        android:layout_margin="10dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="New Text"
                            android:id="@+id/textView_name"
                            android:textSize="15sp"
                            android:textColor="#000000"
                            android:layout_gravity="left|center_vertical"
                            android:gravity="center_vertical|center_horizontal" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="View bill"
                        android:id="@+id/textView_viewBill"
                        android:layout_weight="1.3"
                        android:background="@drawable/border_radius_blue_button"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:layout_marginLeft="12.5dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="12.5dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12.5dp"
                android:id="@+id/linearLayout_viewPager">

                <android.support.v4.view.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/viewpager"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="12.5dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>