<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <include
        android:id="@+id/toolbar_register_template"
        layout="@layout/client_register">
    </include>
    <com.newnergy.para_client.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_pic"
        android:layout_gravity="center"
        android:src="@drawable/client_photo_round"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/textView_name"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView44"
        android:src="@drawable/divide_line_furtherinfo_xh_720x1280"
        android:layout_gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.5dp"
        android:layout_marginBottom="12.5dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Total amount"
            android:id="@+id/textView80"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="#666666"
            android:paddingLeft="40dp"
            android:gravity="left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="$500"
            android:id="@+id/textView_amount"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="#666666"
            android:paddingRight="30dp"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.5dp"
        android:layout_marginBottom="12.5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Secured fund"
            android:id="@+id/textView79"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="#009900"
            android:gravity="left"
            android:paddingLeft="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="$0"
            android:id="@+id/textView78"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="#009900"
            android:paddingRight="30dp"
            android:gravity="right" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView45"
        android:src="@drawable/divide_line_furtherinfo_xh_720x1280"
        android:layout_gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal|center_vertical"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="*You agree with our"
            android:id="@+id/textView90"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="terns and conditions"
            android:id="@+id/textView91"
            android:textColor="#4972b3"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="to finalise your payment"
        android:id="@+id/textView92"
        android:textColor="#000000"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Confirm"
        android:id="@+id/textView_confirm"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/border_radius_blue_button"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp" />

</LinearLayout>