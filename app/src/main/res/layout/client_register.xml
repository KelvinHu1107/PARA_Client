<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".Client_LoginActivity"
    android:background="#ffffff">

    <include
        layout="@layout/toolbar_register" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/page_marge"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar_login_template"
                android:layout_marginBottom="@dimen/page_marge"
                android:background="@drawable/border_radius"
                android:orientation="vertical">


                <!--android:background="@drawable/border_underline"-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_content_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/login_title_size"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="@string/email_title"
                        android:textColor="@color/TitleColor"
                        android:textSize="@dimen/login_core_font_size"
                        android:id="@+id/textView_email_left" />

                    <EditText
                        android:id="@+id/et_register_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/login_input_left_marge"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/inputColor"
                        android:textSize="@dimen/login_core_font_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/under_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_content_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/login_title_size"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="@string/phone_number"
                        android:textColor="@color/TitleColor"
                        android:textSize="@dimen/login_core_font_size"
                        android:id="@+id/textView_phone_left" />

                    <EditText
                        android:id="@+id/et_register_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/login_input_left_marge"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/inputColor"
                        android:textSize="@dimen/login_core_font_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/under_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_content_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/login_title_size"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="@string/first_name"
                        android:textColor="@color/TitleColor"
                        android:textSize="@dimen/login_core_font_size"
                        android:id="@+id/textView_firstName_left" />

                    <EditText
                        android:id="@+id/et_register_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/login_input_left_marge"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/inputColor"
                        android:textSize="@dimen/login_core_font_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/under_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_content_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/login_title_size"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="right"
                        android:text="@string/last_name"
                        android:textColor="@color/TitleColor"
                        android:textSize="@dimen/login_core_font_size"
                        android:id="@+id/textView_lastName_left" />

                    <EditText
                        android:id="@+id/et_register_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/login_input_left_marge"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/inputColor"
                        android:textSize="@dimen/login_core_font_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/under_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_content_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/login_title_size"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/login_input_left_marge"
                        android:gravity="right"
                        android:text="@string/password"
                        android:textColor="@color/TitleColor"
                        android:textSize="@dimen/login_core_font_size"
                        android:id="@+id/textView_password_left" />

                    <EditText
                        android:id="@+id/et_register_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/inputColor"
                        android:textSize="@dimen/login_core_font_size" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/under_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_content_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/login_title_size"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/login_input_left_marge"
                        android:gravity="right"
                        android:lines="1"
                        android:singleLine="true"
                        android:text="@string/confirm_password"
                        android:textColor="@color/TitleColor"
                        android:textSize="@dimen/login_core_font_size"
                        android:id="@+id/textView_confirm_left" />

                    <EditText
                        android:id="@+id/et_register_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="@color/inputColor"
                        android:textSize="@dimen/login_core_font_size" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="... can not be empty"
                android:textSize="16sp"
                android:textColor="#f3736f"
                android:id="@+id/textView_register_warning"
                android:visibility="invisible" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
