<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_radius_blue_stroke"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <com.newnergy.para_client.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView_confirming_pic"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/client_photo_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/textView_confirmming_name"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure to"
            android:id="@+id/textView97"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set up a secured fund?"
            android:id="@+id/textView105"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Secured Funds now will be charged whenever you acceptting an offer"
            android:id="@+id/textView106"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="8sp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Continue"
            android:id="@+id/textView_continue"
            android:background="@drawable/border_radius_blue_button"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>