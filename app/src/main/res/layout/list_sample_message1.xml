<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_chatContainer"
        android:background="#ffffff"
        android:layout_margin="12.5dp">

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView_chat_profile_pic"
            android:src="@drawable/client_portrait_xh_720x1280"
            android:layout_marginLeft="12.5dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginBottom="12.5dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false" />

            <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#666666"
        android:id="@+id/linearLayout_message1"
        android:layout_margin="12.5dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat text"
            android:id="@+id/textView_chatMessage1"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_margin="5dp"
            android:layout_gravity="left"
            android:gravity="left" />
    </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView_chat_time"
            android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/linearLayout_message1"
                android:layout_alignParentRight="false"
                android:lines="1"
                android:singleLine="true"
            android:textColor="#333333" />

        </LinearLayout>

</LinearLayout>
