<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_search_page"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/para_colorPrimary"
    android:padding="0dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="260dp"
            android:layout_height="25dp"
            android:background="@drawable/title_bg_round_corner"
            android:layout_weight="5"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/imageView12"
                android:src="@drawable/search_img_xh_720x1280"
                android:background="@drawable/title_bg_round_corner"
                android:paddingRight="5dp"
                android:paddingLeft="5dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtsearch"
                android:layout_weight="3.52"
                android:hint="Type in any key word..."
                android:textColorHint="#999999"
                android:textSize="10sp"
                android:textColor="#000000"
                android:background="@drawable/title_bg_round_corner"
                android:paddingRight="0dp" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_cancel"
            android:src="@drawable/button_cancel_xh_720x1280"
            android:background="@color/para_colorPrimary"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:paddingTop="5dp" />

    </LinearLayout>
</android.support.v7.widget.Toolbar>