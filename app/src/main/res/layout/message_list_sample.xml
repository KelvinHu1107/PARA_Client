<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/linearLayout_message"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.newnergy.para_client.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView_pic_message"
                    android:src="@drawable/client_photo_round"
                    android:layout_margin="3dp"
                    android:clickable="false" />

                <TextView
                    android:text="11 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_indication"
                    android:background="@drawable/bubble_red"
                    android:layout_gravity="right"
                    android:textSize="10sp"
                    android:layout_marginRight="2dp"
                    android:textColor="#f44336"
                    android:visibility="invisible"
                    android:layout_marginTop="7dp" />

            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:id="@+id/linearLayout7"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:id="@+id/textView_message_name"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="25dp"
                            android:lines="1"
                            android:singleLine="true"
                            android:layout_weight="1.3"
                            android:layout_marginTop="12.5dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:id="@+id/textView_message_time"
                            android:layout_weight="1"
                            android:textColor="#666666"
                            android:textSize="16sp"
                            android:layout_marginTop="12.5dp"
                            android:gravity="right"
                            android:layout_marginRight="12.5dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Text"
                        android:id="@+id/textView_message_text"
                        android:textColor="#666666"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:lines="1" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView555"
        android:src="@drawable/divide_line_furtherinfo_xh_720x1280"
        android:background="#ffffff" />
</LinearLayout>