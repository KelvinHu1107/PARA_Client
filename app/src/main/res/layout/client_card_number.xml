<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar_cardNumber"
        layout="@layout/toolbar_card_number">


    </include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="12.5dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="12.5dp"
            android:padding="12.5dp"
            android:background="@drawable/border_radius">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_cardNum1"
                android:hint="1234"
                android:lines="1"
                android:layout_weight="1"
                android:text="1234"
                android:textColorHint="#666666"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textIsSelectable="false"
                android:singleLine="true"
                android:maxLength="4"
                android:letterSpacing="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/textView34"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_cardNum2"
                android:hint="1234"
                android:lines="1"
                android:layout_weight="1"
                android:textSize="15sp"
                android:maxLength="4"
                android:textColor="#000000"
                android:text="1234" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/textView33"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_cardNum3"
                android:hint="1234"
                android:lines="1"
                android:maxLength="4"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/textView32"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_cardNum4"
                android:hint="1234"
                android:lines="1"
                android:maxLength="4"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>