<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView35"
        android:src="@drawable/client_logo"
        android:layout_gravity="center"
        android:background="#ffffff" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="12.5dp"
        android:background="@drawable/border_radius_blue4a72b3_stroke">

        <EditText
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="25dp"
            android:inputType="textEmailAddress"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_without_underline"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/inputColor"
            android:textSize="18sp"
            android:layout_marginRight="25dp"
            android:hint="Email"
            android:textColorHint="#4a72b3" />/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView40"
            android:src="@drawable/divide_line_furtherinfo_xh_720x1280" />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="25dp"
            android:inputType="textPassword"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_without_underline"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/inputColor"
            android:textSize="18sp"
            android:layout_marginRight="25dp"
            android:hint="Password"
            android:textColorHint="#4a72b3" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginRight="12.5dp"
        android:layout_marginLeft="12.5dp"
        android:id="@+id/linearLayout_logIn"
        android:background="@drawable/border_radius_blue4a72b3_stroke"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:id="@+id/textView68"
            android:layout_gravity="center"
            android:textColor="#4a72b3"
            android:textStyle="bold"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.5dp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="12.5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgotten your login details?"
            android:id="@+id/textView69"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Get helps with singing in."
            android:id="@+id/textView70"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_logIn_warning"
        android:textColor="#f3736f"
        android:textSize="13sp"
        android:visibility="visible"
        android:layout_gravity="center"
        android:layout_marginLeft="12.5dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginRight="12.5dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView38"
        android:src="@drawable/login_or"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/imageButton_faceBook_logIn"
        android:layout_width="match_parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="12.5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="12.5dp"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don&apos;t have an account?"
            android:id="@+id/textView66"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_gravity="bottom" />


        <TextView
            android:id="@+id/no_account"
            android:onClick="onClickRegisterTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sign Up"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="bottom" />
    </LinearLayout>
</LinearLayout>